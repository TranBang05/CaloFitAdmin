                                    @foreach (var order in Model)
                                    {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>
                                                    <div class="d-flex align-items-center gap-3">
                                                        <div class="product-box border">
                                                            <img src="@order.image" alt="">
                                                        </div>
                                                        <div class="product-info">
                                                            <h6 class="product-name mb-1">@order.ProductName</h6>
                                                        </div>
                                                    </div>
                                                </td>
                                                
